<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
 
      <tr>
        <td><%= image_tag group.get_group_image(80,80) %></td>
        <td><%= group.name %></td>
        <td><%= group.introduction %></td>
        <td><%= "メンバー" %>
        <% if group.owner_id == current_user.id %>
        <td><%= link_to 'Edit', edit_group_path(group), class:"btn btn-success" %></td>
        <% end %>
      </tr>

  </tbody>
</table>