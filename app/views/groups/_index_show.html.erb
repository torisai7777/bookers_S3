<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

      <tr>
        <td><%= image_tag group.get_group_image(80,80) %></td>
        <td><%= group.name %></td>
        <td><%= group.introduction %></td>
        <td>
        <% group.users.each do |user| %>
         <%= user.name%><br>
        <% end %>
        </td>
        <% if group.owner_id == current_user.id %>
          <td><%= link_to 'Edit', edit_group_path(group), class:"btn btn-success" %></td>
          <td><%= link_to 'Notice an Event',group_new_mail_path(group), class: "btn btn-sm btn-info" %></>
        <% elsif group.users.exists?(id: current_user) %>
          <td><%= link_to 'Leave this group', group_path(group), method: :delete, class: "btn btn-danger" %></td>
        <% else %>
          <td><%= link_to 'Join this group', group_join_path(group), class: "btn btn-success" %></td>
        <% end %>
      </tr>

  </tbody>
</table>